{
  "compilerOptions": {
    "alwaysStrict": true,
    "lib": ["es2018"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": false,
    "noUnusedParameters": true,
    "outDir": "build",
    "plugins": [{ "name": "typescript-tslint-plugin" }],
    "pretty": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2017"
  },
  "exclude": ["node_modules", "build"]
}
